<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#dddddd" >

        <TextView
            android:id="@+id/tv_userfile_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:gravity="center"
            android:text="新建文件夹"
            android:textColor="#ffffff"
            android:textSize="30sp" 
            android:layout_alignLeft="@+id/ll"
            android:layout_alignRight="@+id/ll"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userfile_add" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_userfile_add"
                android:gravity="center"
                android:text="文件名" />

            <EditText
                android:id="@+id/et_userfile_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="输入文件夹名字" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>